{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": [
      "/backend/**"
    ],
    "buildCommand": "cd backend && pip install -r requirements.txt && playwright install chromium --with-deps"
  },
  "deploy": {
    "startCommand": "cd backend && celery -A worker.celery_app worker --loglevel=info --concurrency=1",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
